html(lang='en')
  head
    meta(charset='UTF-8')
    title Dehoa Kong | CV
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='shortcut icon', href='images/favicon.ico', type='image/x-icon')
    // Start vendor css
    link(rel='stylesheet prefetch', href='vendor/bootstrap/bootstrap-4.0.0.css')
    link(rel='stylesheet prefetch', href='vendor/font-awesome/font-awesome-4.7.0.css')
